@using ProjeMvcApiClient.Models;
@model List<Kategoriler>
@{
    Layout = null;
}
<html>
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
        <div class="bg-dark text-white-50 lead text-center my-2 p-2">
            Kategorilerin Listesi
        </div>
        <div class="text-right pr-2 my-2">
            <a asp-action="Add" asp-controller="Kategoriler" class="btn btn-primary btn-sm">EKLE</a>
        </div>
        <table class="table table-hover table-striped table-bordered table-sm">
            <tr>
                <th>@Html.Label("KAtegori Id")</th>
                <th>@Html.Label("Kategori Adı")</th>
            </tr>
            @foreach (var kategoriler in Model)
            {
                <tr>
                    <td>@kategoriler.KategoriId</td>
                    <td>@kategoriler.KategoriAd</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Kategoriler" asp-route-id="@kategoriler.KategoriId" class="btn btn-primary btn-sm">Güncelle</a>
                        <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" asp-action="Delete" asp-controller="Kategoriler" asp-route-id="@kategoriler.KategoriId" class="btn btn-warning btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>