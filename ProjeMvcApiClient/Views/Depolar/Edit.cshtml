@using ProjeMvcApiClient.Models;
@model Depolar
@{
    Layout = null;
}

<html>
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet"/>*@
</head>
<body>
    <div class="container mt-2">
        <form asp-action="Edit" asp-controller="Depolar" method="post">
            <input type="hidden" asp-for="DepoId" />
            <div class="form-group">
                <label asp-for="DepoAdi">Depo Adı :</label>
                <input asp-for="DepoAdi" type="text" name="DepoAdi" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DepoBolge">Depo Bölgesi:</label>
                <input asp-for="DepoBolge" type="text" name="DepoBolge" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Yenile</button>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
        </form>
    </div>
</body>
</html>
