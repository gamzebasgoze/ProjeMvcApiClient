@using ProjeMvcApiClient.Models;
@model List<Personeller>
@{
    Layout = null;
}
<html>
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
        <div class="bg-dark text-white-50 lead text-center my-2 p-2">
            Personellerin Listesi
        </div>
        <div class="text-right pr-2 my-2">
            <a asp-action="Add" asp-controller="Personeller" class="btn btn-primary btn-sm">EKLE</a>
        </div>
        <table class="table table-hover table-striped table-bordered table-sm">
            <tr>
                <th>@Html.Label("Personel Id")</th>
                <th>@Html.Label("Personel Ad Soyad")</th>
                <th>@Html.Label("Cinsiyet")</th>
                <th>@Html.Label("Yaş")</th>
            </tr>
            @foreach (var personeller in Model)
            {
                <tr>
                    <td>@personeller.PersonelId</td>
                    <td>@personeller.PAdsoyad</td>
                    <td>@personeller.PCinsiyet</td>
                    <td>@personeller.PYas</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Personeller" asp-route-id="@personeller.PersonelId" class="btn btn-primary btn-sm">Güncelle</a>
                        <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" asp-action="Delete" asp-controller="Personeller" asp-route-id="@personeller.PersonelId" class="btn btn-warning btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>