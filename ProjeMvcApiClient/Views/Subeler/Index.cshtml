@using ProjeMvcApiClient.Models;
@model List<Subeler>
@{
    Layout = null;
}
<html>
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
        <div class="bg-dark text-white-50 lead text-center my-2 p-2">
            Şubelerin Listesi
        </div>
        <div class="text-right pr-2 my-2">
            <a asp-action="Add" asp-controller="Subeler" class="btn btn-primary btn-sm">EKLE</a>
        </div>
        <table class="table table-hover table-striped table-bordered table-sm">
            <tr>
                <th>@Html.Label("Şube Id")</th>
                <th>@Html.Label("Şube Adı")</th>
            </tr>
            @foreach (var subeler in Model)
            {
                <tr>
                    <td>@subeler.SubeId</td>
                    <td>@subeler.SubeAd</td>
                    <td>
                        <a asp-action="Edit" asp-controller="subeler" asp-route-id="@subeler.SubeId" class="btn btn-primary btn-sm">Güncelle</a>
                        <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" asp-action="Delete" asp-controller="Subeler" asp-route-id="@subeler.SubeId" class="btn btn-warning btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>