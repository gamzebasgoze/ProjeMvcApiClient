@using ProjeMvcApiClient.Models;
@model List<Urunler>
@{
    Layout = null;
}
<html>
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
        <div class="bg-dark text-white-50 lead text-center my-2 p-2">
            Ürünlerin Listesi
        </div>
        <div class="text-right pr-2 my-2">
            <a asp-action="Add" asp-controller="Urunler" class="btn btn-primary btn-sm">EKLE</a>
        </div>
        <table class="table table-hover table-striped table-bordered table-sm">
            <tr>
                <th>@Html.Label("Ürün Id")</th>
                <th>@Html.Label("Ürün Adı")</th>
                <th>@Html.Label("Ürün Adeti")</th>
                <th>@Html.Label("Ürün Açıklaması")</th>
            </tr>
            @foreach (var urunler in Model)
            {
                <tr>
                    <td>@urunler.UrunId</td>
                    <td>@urunler.UrunAdi</td>
                    <td>@urunler.UrunAdeti</td>
                    <td>@urunler.UrunAciklama</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Urunler" asp-route-id="@urunler.UrunId" class="btn btn-primary btn-sm">Güncelle</a>
                        <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" asp-action="Delete" asp-controller="Urunler" asp-route-id="@urunler.UrunId" class="btn btn-warning btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
